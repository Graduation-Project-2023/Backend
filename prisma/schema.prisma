
generator client {
    provider="prisma-client-js"
}

datasource db {
    provider="postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    ADMIN
    STUDENT
    PROFESSOR
}

model User {
    id String @id @default(uuid())
    email String @unique
    password String
    role Role
    @@map("users")
}


enum Religion {
    MUSLIM
    CHRISTIAN
}

enum Gender {
    MALE 
    FEMALE
}

model Form {
    id String @id @default(uuid())
    fullname String
    nationality String
    gender Gender
    religion Religion
    nationalId String
    birthDate DateTime
    birthPlace String
    guardianName String
    address String
    contactEmail String
    contactPhone String
    city String
    @@map("forms")
}